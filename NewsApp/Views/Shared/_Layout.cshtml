@using Microsoft.AspNetCore.Identity;
@using NewsApp.Extentions;
@using NewsApp.Entities.Models;
@using Microsoft.AspNetCore.Mvc.Localization
@inject NewsApp.Data.NewsAppContext context;
@inject UserManager<NewsApp.Entities.Models.User> userManager;
@inject IViewLocalizer Localizer;

@{
    User? user = await context.GetUserAsync(User.Identity);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Windstorm News</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsApp.styles.css" asp-append-version="true" />
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
</head>
<body>
    @if (IsSectionDefined("AddToBody"))
    {
        @RenderSection("AddToBody", required: false)
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Windstorm News</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="NewsArticles">@Localizer["news"]</a>
                        </li>
                        @if (User.IsAuthenticated() == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="SignUp" asp-controller="Users">@Localizer["signup"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="SignIn" asp-controller="Users">@Localizer["signin"]</a>
                            </li>
                        }
                        else
                        {
                            if (await userManager.IsInRoleAsync(user, "Editor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-action="Index" asp-controller="EditorRoom">@Localizer["editor_room"]</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a href="#" class="nav-link text-dark">@(user.UserName)</a>
                            </li>

                            <li class="nav-item">
                                <button type="button" class="btn btn-primary bg-danger" data-toggle="modal" data-target="#signOutModal">
                                    @Localizer["signout"]
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NewsApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade" id="signOutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="signOutModalLabel">@Localizer["signout"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                     @Localizer["signout_ask"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["cancel"]</button>
                    <a class="nav-link text-danger" asp-action="Logout" asp-controller="Users">@Localizer["signout"]</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
