@model NewsApp.Entities.ViewModels.SignInViewModel
@{
    ViewData["Title"] = "Sign in";
}

@section AddToHead {
    <link href="@Url.Content("~/css/pages-styles/common.css")" rel="stylesheet" type="text/css" />
}

<form class="common-form" asp-controller="Users" asp-action="SignIn"
      method="post">
    <label>Email</label>
    <input id="email-field" class="text-form-field" name="Email" type="email" />
    <label>Your Password</label>
    <input id="psw-field" class="text-form-field" name="Password" type="password" />
    <input type='submit' value='Sign In' onclick="return clickSubmit();">
    <div asp-validation-summary="All" class="text-danger"></div>
</form>

<div id="errordiv" style="color: red; display: flex; justify-content: center;"></div>

@section Scripts {
    <script src="~/js/Users/SignIn.js"></script>
}
