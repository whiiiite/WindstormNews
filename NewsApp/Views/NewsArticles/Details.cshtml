@model NewsApp.Entities.Models.NewsArticle
@using NewsApp.Extentions
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["details"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead {
    <link rel="stylesheet" href="~/css/articles/details.css" asp-append-version="true" />
}


<div class="d-flex flex-row w-100">
    <div class="d-flex justify-content-center flex-column">
        <div class="text-center">
            <div>
                <img class="o-fit-contain" width="218" height="218" src="~/@Model.HeadImagePath.FixImagePath()" />
            </div>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <h2 class="w-75">
                @Model.Title
            </h2>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <div class="w-75" style="white-space:pre-line">
                @Model.TextData
            </div>
        </div>
    </div>

    <div id="sideBar">

    </div>
</div>
<div style="margin-top: 100px;">
    <a asp-action="Index">@Localizer["back_to_list"]</a>
</div>
